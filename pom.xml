      </systemPath>
    </dependency>
    <dependency>
      <groupId>edu.stanford.nlp</groupId>
      <artifactId>proxool-cglib</artifactId>
      <version>3.5.2</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/proxool-cglib.jar
      </systemPath>
    </dependency>


